<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} -Symfofilms Project!</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/halfmoon-variables.css') }}" />
        {% endblock %}
        <!--Tailwind css -->
        <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body class="overflow-x-hidden">
      {# <div class="page-wrapper with-navbar with-sidebar with-navbar-fixed-bottom" 
      data-sidebar-type="overlayed-sm-and-down"> #}
      <div class="page-wrapper with-navbar with-navbar-fixed-bottom" >
      
      {# {% block navbar %}{% endblock %} #}
      <!-- Navbar (immediate child of the page wrapper) -->
      <nav class="navbar">
        <!-- Navbar content (with toggle sidebar button) -->
        <div class="navbar-content">
          <button class="btn btn-action" type="button">
            <i class="fa fa-bars" aria-hidden="true"></i>
            <span class="sr-only">Toggle sidebar</span> <!-- sr-only = show only on screen readers -->
          </button>
        </div>
        <!-- Navbar brand -->
        <a href="{{ path('portada') }}" class="navbar-brand">
          <img src="/img/icono.png" alt="SymfoFilms">
          SymfoFilms
        </a>
        <!-- Navbar text -->
        <span class="navbar-text text-monospace">v3.0</span> <!-- text-monospace = font-family shifted to monospace -->
        <!-- Navbar nav -->
        <ul class="navbar-nav d-none d-md-flex"> <!-- d-none = display: none, d-md-flex = display: flex on medium screens and up (width > 768px) -->
          <li class="nav-item active">
            <a href="{{ path('docs') }}" class="nav-link">Docs</a>
          </li>
          <li class="nav-item">
            <a href="{{ path('components') }}" class="nav-link">CSS COMPONENTS</a>
          </li>
          <li class="nav-item">
            <a href="{{ path('all_movies') }}" class="nav-link">Peliculas</a>
          </li>
          <li class="nav-item">
            <a href="{{ path('all_actors') }}" class="nav-link">Actores</a>
          </li>
        </ul>
        <!-- Toggling dark mode -->
        <button class="btn btn-primary mx-2" type="button" onclick="halfmoon.toggleDarkMode()">Toogle Light/Dark Mode!</button>
        <div class="mr-0">
          {{ "now"|date('d/m/Y H:i', timezone="Europe/Madrid")}}
        </div>
        <!-- Navbar form (inline form) -->
        <form class="form-inline d-none d-md-flex ml-auto" action="{{ path('movie_search') }}" method="POST"> 
          <!-- Select box -->
          <select class="form-control" id="campo" name="campo">
            <option value="" selected="selected" disabled="disabled">Select a criteriar</option>
            <option value="titulo">TITULO</option>
            <option value="director">DIRECTOR</option>
            <option value="sinopsis">SINOPSIS</option>
          </select>
          <input type="text" class="form-control" name="valor" id="valor" placeholder="Buscador de películas" required="required">
          <button class="btn btn-primary" type="submit">SEARCH</button>
        </form>
        <!-- Navbar content (with the dropdown menu) -->
        <div class="navbar-content d-md-none ml-auto"> <!-- d-md-none = display: none on medium screens and up (width > 768px), ml-auto = margin-left: auto -->
          <div class="dropdown with-arrow">
            <button class="btn" data-toggle="dropdown" type="button" id="navbar-dropdown-toggle-btn-1">
              Menu
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right w-200" aria-labelledby="navbar-dropdown-toggle-btn-1"> <!-- w-200 = width: 20rem (200px) -->
              <a href="{{ path('docs') }}" class="dropdown-item">Docs</a>
              <a href="#" class="dropdown-item">PELICULAS</a>
              <div class="dropdown-divider"></div>
              <div class="dropdown-content">
                <form action="..." method="...">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="Email address" required="required">
                  </div>
                  <button class="btn btn-primary btn-block" type="submit">Sign up</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </nav>
      {# {% block sidebar %} {% endblock %}#}
 
      <!-- Content wrapper -->
      <div class="content-wrapper mt-10">
        {% block success %}
        {% for message in app.flashes('success') %}
          <div class="alert alert-success m-4 p-4" role="alert">
            <h4 class="alert-heading">Operación realizada correctamente</h4>
            {{ message }}
          </div>
        {% endfor %}
        {% endblock %}

        {% block main %}{% endblock %}

      </div>
    </div>
        {% block scripts %}
        <script src="{{ asset('js/halfmoon.js') }}" defer></script>
        {% endblock %}
    </body>
</html>
