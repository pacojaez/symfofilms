<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} -Symfofilms Project!</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/halfmoon-variables.css') }}" />
        {% endblock %}
        <!--Tailwind css -->
        <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body class="overflow-x-hidden">

      {% include('components/modal.html.twig') %}

      <div class="page-wrapper with-navbar with-navbar-fixed-bottom" >
      {% include('components/navbar.html.twig') %}
      
      {# {% include('components/sidebar.html.twig') %} #}
 
      <!-- Content wrapper -->
      <div class="mt-10 content-wrapper">
        {% block success %}
          {% for message in app.flashes('success') %}
            <div class="p-4 m-4 alert alert-success" role="alert">
              <h4 class="alert-heading">Operaci√≥n realizada correctamente</h4>
              {{ message }}
            </div>
          {% endfor %}
        {% endblock %}

        {% block main %}{% endblock %}

      </div>
    </div>
        {% block scripts %}
        <script src="{{ asset('js/halfmoon.js') }}" defer></script>
        {% endblock %}
    </body>
</html>
