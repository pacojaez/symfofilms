{% extends 'layouts/base.html.twig' %}

{% block title %}Borrar una carátula de una Película de la DB{% endblock %}

{% block main %}
{{ parent() }}
<!-- Card with no padding with multiple content containers nested inside of it -->
<div class="w-800 mw-full"> <!-- w-600 = width: 60rem (600px), mw-full = max-width: 100% -->
  <div class="card p-0"> <!-- p-0 = padding: 0 -->
    <!-- First content container nested inside card -->
    <h3>CONFIRMAR EL BORRADO DE LA CARÁTULA DE LA PELÍCULA {{ peli.id }}</h3>
    <img src="{{ asset(covers_directory ~ '/' ~ (peli.caratula) ?? 'default.jpg' )}}" class="img-fluid rounded-top" alt="{{ peli.titulo }}" title="{{ peli.titulo }}">
    <p>ojo!, esta acción es irreversible</p>
    <div class="content">
      {{ form(formulario) }}
    </div>
    
  </div>
</div>
{% endblock %}
