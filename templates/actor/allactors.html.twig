{% extends 'layouts/base.html.twig' %}

{% block title %}Todas las peliculas{% endblock %}

{% block main %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
<div class="d-flex flex-row justify-content-between align-items-center m-2 p-2">
    {# Crear variable en Twig #}
    {% set ruta = 'all_actors' %}
    <a href=" {{ path('actor_create')}}"><button class="btn btn-primary">AÃ‘ADIR NUEVO ACTOR</button></a>
    {% if totalPaginas > 1 %}
      {% include('components/pagination.html.twig') %}
    {% endif %}	
</div>
  
<!-- Hoverable rows -->
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th></th>
      <th>NOMBRE</th>
	    <th>FECHA NACIMIENTO</th>
      <th>NACIONALIDAD</th>
	  <th class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
  	{% for actor in actors %}
    <tr>
      <th>{{ actor.id }}</th>
      <th>
        {% if actor.gender == 'M' %}
          <img src="{{ asset(portraits_directory ~'/'~ (actor.portrait ?? 'default_male.jpg' ))}}" class="img-fluid rounded-top" alt="{{ actor.portrait }}" title="{{ actor.nombre }}">
        {% else %}
          <img src="{{ asset(portraits_directory ~'/'~ (actor.portrait ?? 'default_female.jpg' ))}}" class="img-fluid rounded-top" alt="{{ actor.portrait }}" title="{{ actor.nombre }}">
       {% endif %} 
      </th>
      <td>{{ actor.nombre }}</td>
      {# <td>
	  	<img src="/img/{{ actor.nombre }}.jpg" class="img-fluid rounded-top" alt="{{ actor.nombre }}"> <!-- rounded-top = rounded corners on the top -->
	    </td> #}
      <td class="text-right">{{ actor.fechanacimiento | date("d/m/Y") }}</td>
      <td class="text-right">{{ actor.nacionalidad }}</td>
      <td class="">
        <div class="d-flex justify-content-center align-items-center">
          <a href="{{ path('actor_show', {'id':actor.id })}}" class="m-2"><img src="{{ asset('img/buttons/show.png')}}" alt="detalles actor {{ actor.nombre }}" style="height:20px; width:20px"/></a>
          <a href="{{ path('actor_edit', {'id':actor.id })}}" class="m-2"><img src="{{ asset('img/buttons/update.png')}}" alt="editar actor {{ actor.nombre }}" style="height:20px; width:20px"/></a>
          <a href="{{ path('actor_delete', {'id':actor.id })}}" class="m-2"><img src="{{ asset('img/buttons/delete.png')}}" alt="borrar actor {{ actor.nombre }}" style="height:20px; width:20px"/></a>
        </div>
      </td>
    </tr>
	{% endfor %}
  </tbody>
</table>

		
{% endblock %}
