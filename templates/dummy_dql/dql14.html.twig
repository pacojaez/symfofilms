{% extends 'layouts/admin.html.twig' %}

{% block title %} Portada {% endblock %}

{% block main %}

<div class="m-6 p-4">
    <h1>PRUEBAS DE DQL 14</h1>
    <div class="row">
        <h2 class="p-2 m-4 font-weight-bold">PELÍCULAS: CAMPOS CALCULADOS </h2>
        <details class="collapse-panel mw-full"> 
            <summary class="collapse-header">
                SELECT con VALORACIÓN SOBRE 100:
            </summary>
            <div class="collapse-content">
               <ul class="m-4">
                   {% for movie in movies %}
                        <li class="font-weight-bold"> 
                            Película :{{ movie.titulo }}
                            con valoración {{ movie.sobreCien }} sobre 100
                        </li>
                    {% endfor %}
               </ul>
                <hr>
            </div>
        </details>
    </div>
</div>
{% endblock %}
