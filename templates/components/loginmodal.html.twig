{% block loginmodal %}
{% block title %}Log in!{% endblock %}
	<div class="modal" id="login-modal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<a href="#" class="btn close" role="button" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</a>
				{#  #}
				{# <h5 class="modal-title">Sign in to your account</h5> #}
				{# {% if app.user %}
					<div class="mb-3">
						You are logged in as {{ app.user.username }}, 
						<a href="{{ path('app_logout') }}" class="btn btn-primary btn-block" >Sign out</a>
					</div>
				{% else %} #}
					<form method="post">
						{# {% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %} #}
						<h5 class="modal-title">Sign in to your account</h5>
						{# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
						{% if app.user %}
							<div class="form-group">
								<p class=''>Estas identificado como: {{ app.user.displayname }}</p>
								<a href="{{ path('app_logout') }}" class="btn btn-primary">Log Out</a>
							</div>
						{% else %}
							<div class="form-group">
								<label for="inputEmail">Email</label>
								<input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
							</div>
							<div class="form-group">
								<label for="inputPassword">Password</label>
								<input type="password" name="password" id="inputPassword" class="form-control" required>
							</div>
								<input type="hidden" name="_csrf_token"
									value="{{ csrf_token('authenticate') }}">
							<input class="btn btn-primary btn-block" type="submit" value="Sign in">
						{% endif %}
					</form>
					<div class="mt-10 text-right">
						<!-- text-right = text-align: right, margin-top: 1rem (10px) -->
						<a href="" class="hyperlink">Forgot password?</a>
						<!-- hyperlink = used on regular links to remove anti-aliasing in dark mode -->
					</div>
				{# {% endif %} #}
			</div>
		</div>
	</div>
{% endblock %}