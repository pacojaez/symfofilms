                    <div class="col-sm text-center">{{ peli.titulo }}</div>
                    <div class="col-sm text-center font-weight-bold">VALORACIÓN: {{ peli.valoracion }}</div>
                </div>  
            </a>         
        {% endfor %}
    </div>
</div>

