{% extends 'layouts/base.html.twig' %}

{% block title %} Portada {% endblock %}

{% block main %}
<div class="d-flex flex-column justify-content-center m-4 p-2">
    <h2 class="text-center font-size-24 font-weight-bold primary text-primary text-smoothing-auto-dm">ÚLTIMAS PELÍCULAS AÑADIDAS CON CARÁTULAS</h2>
    <div class="d-flex justify-content-center">
        {% for peli in pelisLastsWithCovers %} 
            <a href="{{ path('movie_show', {'id':peli.id })}}" class="m-2">
                <div class="w-300 h-quarter m-2 p-2">
                    <img src="{{ asset(covers_directory ~'/'~ (peli.caratula ?? 'default.jpg' ))}}" class="h-300 w-250 rounded-top" alt="{{ peli.titulo }}" title="{{ peli.titulo }}"> 
                    <div class="col-sm text-center">{{ peli.titulo }}</div>
                </div>
            </a>           
        {% endfor %}
    </div>
</div>

<div class="d-flex flex-column justify-content-center m-4 p-2">
