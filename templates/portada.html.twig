{% extends 'layouts/base.html.twig' %}

{% block title %} Portada {% endblock %}

{% block main %}

<div class="container-fluid">
  <div class="row">
        {% for peli in peliculas %}
        <!-- Card with no padding with a content container nested inside of it -->
        <div class="w-400 mw-full"> <!-- w-400 = width: 40rem (400px), mw-full = max-width: 100% -->
        <div class="card p-0 d-flex flex-col"> <!-- p-0 = padding: 0 -->
            <img src="/img/{{ peli.titulo }}.jpg" class="img-fluid rounded-top" alt="{{ peli.titulo }}"> 
            <!-- Nested content container inside card -->
            <div class="content">
            <h2 class="content-title">
                {{ peli.titulo }}
            </h2>
            <p class="text-muted">
                Dir: {{ peli.director }}
            </p>
            <p class="text-muted">
                Duracion: {{ peli.duracion }}
            </p>
            <p class="text-muted">
                Género: {{ peli.genero }}
            </p>
            <div c
            <div class="text-center mt-6 alert alert-success"> <!-- text-right = text-align: right -->
                <a href="{{ path('movie_show', {'id':peli.id })}}" class="btn">Más detalles</a>
            </div>
            </div>
        </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
